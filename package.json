{
  "name": "@design-edito/tools",
  "version": "0.3.8",
  "description": "",
  "type": "module",
  "author": "Maxime Fabas",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/lm-design-edito/lm-tools"
  },
  "scripts": {
    "check:scripts": "npx tsc --project scripts/tsconfig.json --noEmit",
    "check:src:agnostic": "npx tsc --project src/agnostic/tsconfig.json --noEmit",
    "check:src:components": "npx tsc --project src/components/tsconfig.json --noEmit",
    "check:src:node": "npx tsc --project src/node/tsconfig.json --noEmit",
    "check:src": "npm run check:src:agnostic && npm run check:src:components && npm run check:src:node",
    "check": "npm run check:scripts && npm run check:src",
    "tests:node": "vitest run src/node/**/*.tests.ts",
    "tests:agnostic": "vitest run src/agnostic/**/*.tests.ts",
    "tests:react": "vitest run --config vitest.react.config.ts",
    "tests:preact": "vitest run --config vitest.preact.config.ts",
    "tests": "vitest run --reporter verbose",
    "tests:watch": "vitest --reporter verbose",
    "demo": "cd demo && npm start",
    "demo:preact": "cd demo && npm run start:preact",
    "bundle:scripts": "npx esbuild scripts/**/*.ts --outdir=.temp/scripts --bundle --platform=node --format=esm --packages=external",
    "bundle:src": "node .temp/scripts/build/index.js",
    "build:scripts": "rm -rf .temp/scripts && mkdir -p .temp/scripts && npm run bundle:scripts && npm run check:scripts",
    "build:src": "rm -rf lib && mkdir -p lib && npm run bundle:scripts && npm run bundle:src && npm run check:src",
    "build": "npm run check && npm run tests && npm run build:scripts && npm run build:src",
    "buildquick": "npm run build:scripts && npm run build:src",
    "prepublishOnly": "npm run build && node .temp/scripts/pre-publish/index.js"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/react": "^16.3.1",
    "@types/archiver": "^6.0.3",
    "@types/express": "^5.0.2",
    "@types/jsdom": "^27.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.7.1",
    "@types/prompts": "^2.4.9",
    "@types/quantize": "^1.0.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@types/semver": "^7.7.1",
    "@types/sharp": "^0.31.1",
    "@types/ssh2-sftp-client": "^9.0.4",
    "@vitejs/plugin-react": "^5.1.2",
    "change-case": "^5.4.4",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.10",
    "jsdom": "^27.4.0",
    "prompts": "^2.4.2",
    "puppeteer": "^24.23.1",
    "semver": "^7.7.3",
    "simple-git": "^3.27.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.907.0",
    "@aws-sdk/lib-storage": "^3.907.0",
    "@google-cloud/storage": "^7.17.2",
    "@inquirer/prompts": "^8.2.0",
    "ansi-regex": "^6.2.2",
    "archiver": "^7.0.1",
    "basic-ftp": "^5.0.5",
    "chalk": "^5.6.2",
    "express": "^5.1.0",
    "multer": "^2.0.0",
    "quantize": "^1.0.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sharp": "^0.34.4",
    "ssh2": "^1.17.0",
    "ssh2-sftp-client": "^12.0.0",
    "xss": "^1.0.15",
    "zod": "^4.1.12"
  }
}
