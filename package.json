{
  "name": "@design-edito/tools",
  "version": "0.3.9",
  "description": "",
  "type": "module",
  "author": "Maxime Fabas",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/lm-design-edito/lm-tools"
  },
  "scripts": {
    "lint": "eslint",
    "lint:src": "eslint \"src/**/*.{ts,tsx}\"",
    "check:scripts": "npx tsc --project scripts/tsconfig.json --noEmit",
    "check:src:agnostic": "npx tsc --project src/agnostic/tsconfig.json --noEmit",
    "check:src:components": "npx tsc --project src/components/tsconfig.json --noEmit",
    "check:src:node": "npx tsc --project src/node/tsconfig.json --noEmit",
    "check:src": "npm run check:src:agnostic && npm run check:src:components && npm run check:src:node",
    "check": "npm run check:scripts && npm run lint:src && npm run check:src",
    "tests:node": "vitest run src/node/**/*.tests.ts",
    "tests:agnostic": "vitest run src/agnostic/**/*.tests.ts",
    "tests:react": "vitest run --config vitest.react.config.ts",
    "tests:preact": "vitest run --config vitest.preact.config.ts",
    "tests": "vitest run --reporter verbose",
    "tests:watch": "vitest --reporter verbose",
    "demo": "cd demo && npm start",
    "demo:preact": "cd demo && npm run start:preact",
    "build:scripts": "rm -rf .temp/scripts && mkdir -p .temp/scripts && npx esbuild scripts/**/*.ts --outdir=.temp/scripts --bundle --platform=node --format=esm --packages=external",
    "build:src": "rm -rf lib && mkdir -p lib && node .temp/scripts/build/index.js",
    "build": "npm run check && npm run tests && npm run build:scripts && npm run build:src",
    "prepublishOnly": "npm run build && node .temp/scripts/pre-publish/index.js"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/react": "^16.3.2",
    "@types/archiver": "^7.0.0",
    "@types/express": "^5.0.6",
    "@types/jsdom": "^27.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.2.1",
    "@types/prompts": "^2.4.9",
    "@types/quantize": "^1.0.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/semver": "^7.7.1",
    "@types/sharp": "^0.31.1",
    "@types/ssh2-sftp-client": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^5.1.3",
    "change-case": "^5.4.4",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.3",
    "eslint": "^8.44.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "jsdom": "^28.0.0",
    "prompts": "^2.4.2",
    "puppeteer": "^24.37.1",
    "semver": "^7.7.4",
    "simple-git": "^3.30.0",
    "standard": "^17.1.2",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.984.0",
    "@aws-sdk/lib-storage": "^3.984.0",
    "@google-cloud/storage": "^7.19.0",
