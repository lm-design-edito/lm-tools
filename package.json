    "chalk": "^5.6.2",
    "express": "^5.2.1",
    "multer": "^2.0.0",
    "quantize": "^1.0.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sharp": "^0.34.5",
    "ssh2": "^1.17.0",
