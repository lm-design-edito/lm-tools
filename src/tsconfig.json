{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "../lib",
    "declaration": true,
    "moduleResolution": "Node",
    "rootDir": ".",
    "noUncheckedIndexedAccess": true,
    "paths": {
      "~/components/*": ["./components/*"],
      "~/utils/*": ["./*"]
    }
  },
  "exclude": [
    "../node_modules",
    "../lib"
  ]
}
