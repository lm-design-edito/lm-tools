{
  "compilerOptions": {
    "lib": ["ESNext"],
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "../lib",
    "declaration": true,
    "moduleResolution": "Node",
    "rootDir": ".",
    "noUncheckedIndexedAccess": true,
    "jsx": "react-jsx",
    "paths": {
      "~/agnostic": ["./agnostic/index.ts"],
      "~/agnostic/*": ["./agnostic/*"],
      "~/components": ["./components/index.tsx"],
      "~/components/*": ["./components/*"],
      "~/node": ["./node/index.ts"],
      "~/node/*": ["./node/*"],
      "~/shared": ["./shared/index.ts"],
      "~/shared/*": ["./shared/*"]
    }
  },
  "exclude": [
    "../node_modules",
    "../lib"
  ]
}
