{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "../lib",
    "declaration": true,
    "moduleResolution": "Node",
    "rootDir": ".",
    "noUncheckedIndexedAccess": true,
    "jsx": "react-jsx",
    "paths": {
      "~/agnostic/*": ["./agnostic/*"],
      "~/browser/*": ["./browser/*"],
      "~/components/*": ["./components/*"],
      "~/node/*": ["./node/*"],
      "~/shared/*": ["./shared/*"]
    }
  },
  "exclude": [
    "../node_modules",
    "../lib"
  ]
}
