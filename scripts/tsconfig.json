{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "..",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "../.scripts",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "lib": ["ESNext"],
    "rootDir": "..",
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "paths": {
      "~/agnostic/*": ["src/agnostic/*"],
      "~/browser/*": ["src/browser/*"],
      "~/node/*": ["src/node/*"],
      "~/src/*": ["src/*"],
      "~/scripts/*": ["scripts/*"]
    }
  },
  "include": [
    "../scripts/**/*",
    "../src/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../.scripts",
    "../src/components/**/*"
  ]
}
