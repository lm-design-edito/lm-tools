{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "..",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "../.temp/scripts",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "lib": ["ESNext"],
    "rootDir": "..",
    "jsx": "react-jsx",
    "noUncheckedIndexedAccess": true,
    "declaration": true
  },
  "include": [
    "../scripts/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../.temp/scripts",
    "../src/components/**/*"
  ]
}
